---
import Button from "../components/button.astro";
import Projects from "../components/home/projects.astro";
import Separator from "../components/home/separator.astro";
import Writings from "../components/home/writings.astro";
import Layout from "../layouts/main.astro";
---

<Layout title="yonick!">
  <div
    class="relative z-20 w-full max-w-4xl mx-auto mt-16 px-7 md:mt-24 lg:mt-32 xl:px-0"
  >
    <div class="flex flex-col items-center md:flex-row">
      <div class="relative w-full md:w-1/2">
        <h1
          class="mb-5 text-4xl font-bold leading-tight md:text-4xl lg:text-6xl dark:text-white"
          id="hello-text"
        >
          <!-- Text will be typed here -->
        </h1>
        <p class="mb-2 font-semibold text-neutral-800 dark:text-neutral-200">
          I can help you out with:
        </p>
        <ul
          class="py-2 space-y-[3px] text-sm list-disc list-inside text-neutral-500 dark:text-neutral-400"
        >
          <li>Machine Learning Development</li>
          <li>Data Science</li>
          <li>Frontend Development</li>
          <li>Blogs</li>
          <li>and more...</li>
        </ul>
        <Button text="Follow me on ùïè" link="https://x.com/fuck_imlate" />
      </div>
      <div
        class="relative justify-end hidden w-full mt-10 md:flex md:pl-10 md:w-1/2 md:mt-0 md:translate-y-4 xl:translate-y-0"
      >
        <div class="relative z-50 w-full">

          <div class="relative z-30 px-10">
            <img
              src="public/assets/images/Wall-E gif without background.gif"
              loading="eager"
              decoding="auto"
              class="relative z-30 w-full aspect-[790/1189] md:max-w-md mx-auto dark:-translate-y-0.5"
            />
          </div>

        </div>
      </div>
    </div>
  </div>

  <Separator text="Check out my projects" />
  <Projects />
  <Separator text="Some of my writing" />
  <Writings />
</Layout>

<script>
  function textTypingEffect(element, texts, delay = 100, textIndex = 0, index = 0) {
    if (index < texts[textIndex].length) {
      element.textContent = texts[textIndex].substring(0, index + 1);
      index++;
      setTimeout(() => {
        textTypingEffect(element, texts, delay, textIndex, index);
      }, delay);
    } else {
      setTimeout(() => {
        element.textContent = "";
        textIndex = (textIndex + 1) % texts.length;
        textTypingEffect(element, texts, delay, textIndex, 0);
      }, delay * 10); // wait for a short delay before wiping out the text
    }
  }

  // Apply the text typing effect to the #hello-text element
  const texts = ["Yooo, It's Sagnik", "Oh, look who I‚Äôm graced with", "nice to meet you", "me? AI Specialist!üõê"];
  textTypingEffect(document.getElementById("hello-text"), texts);
</script>